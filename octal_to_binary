#include <stdio.h>

int octalToDecimal(int n) {
    int decimal = 0, base = 1;
    while (n > 0) {
        int rem = n % 10;
        decimal += rem * base;
        base = base * 8;
        n = n / 10;
    }
    return decimal;
}

int decimalToBinary(int n) {
    int  binary = 0;
    int place = 1;
    while (n > 0) {
            int rem = n % 2;
            binary += rem * place;
            place = place * 10;
            n = n / 2;
        }
    return binary;
}
int main() {
    int octal;
    printf("Enter an octal number: ");
    scanf("%d", &octal);

    int decimal = octalToDecimal(octal);
    int  binary = decimalToBinary(decimal);

    printf("Binary: %d", binary);

    return 0;
}
